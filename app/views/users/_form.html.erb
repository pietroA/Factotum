<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <label for="user_email">Email</label>
    <%= form.email_field :email, id: :user_email %>
  </div>

  <div class="field">
    <label for="user_password">Password</label>
    <%= form.password_field :password, id: :user_password %>
    <br \> <small>8 char minimum</small>
  </div>

  <div class="field">
    <label for="user_password_confirmation">Password Confirm</label>
    <%= form.password_field :password_confirmation , id: :user_password_confirmation %>
  </div>

  <div class="field">
    <%= form.submit "Registrati", class: "btn btn-primary" %>
  </div>
<% end %>